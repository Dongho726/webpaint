extends layout

block content
  canvas.canvas(id="jsCanvas")
  .controls_range
    input(type="range" id="jsRange" min='0.1' max='5'
    value='2.5' step='0.1')
  .controls_color
    input.controlColor(type="color" value="#2c2c2c")
  .controls_spaceBTN
    button#jsDraw draw
    button#jsCircle Circle
    button#jsTriangle Triangle
    button#jsRectangle Rectangle
    button#jsModeSpace Full
    br
    button#jsSave Save

  link(rel='stylesheet', href='/stylesheets/draw.css')
  script(src='/scripts/canvas.js')

extends layout

block content
  canvas.canvas(width='600' height='400' id="jsCanvas")
  .controls_range
    input(type="range" id="jsRange" min='0.1' max='5'
    value='2.5' step='0.1')
  .controls_color
    input.controlColor(type="color")
  .controls-spaces
    button#jsDraw draw
    button#jsCircle Circle
    button#jsTriangle Triangle
    button#jsRectangle Rectangle
  button.save-btn 이미지 저장

  link(rel='stylesheet', href='/stylesheets/index.css')
  script(src='/scripts/canvas.js')
